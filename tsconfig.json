{
  "compilerOptions": {
    "module": "esnext",
    "target": "es5",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": ["index.test.ts", "index.ts", "e2e/browser.test.ts"],
  "exclude": ["node_modules", "lib", "compile"],
  "types": ["jest-playwright-preset", "expect-playwright"]
}
