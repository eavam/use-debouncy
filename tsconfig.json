{
  "compilerOptions": {
    "baseUrl": "./",
    "module": "esnext",
    "target": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "lib"],
  "types": ["jest", "node"]
}
