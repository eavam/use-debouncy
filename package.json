{
  "name": "use-debouncy",
  "version": "4.4.0",
  "author": "Egor Avakumov",
  "description": "ðŸŒ€ Small (~0.2kb) debounce effect hook for React with TypeScript support",
  "license": "MIT",
  "keywords": [
    "debounce",
    "use-debounce",
    "react debounce",
    "debounce hook",
    "use-debouncy",
    "use-effect",
    "react",
    "react hook",
    "hooks",
    "typescript"
  ],
  "repository": "https://github.com/eavam/use-debouncy.git",
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "module": "lib/index.es.js",
  "sideEffects": false,
  "scripts": {
    "test": "jest",
    "serve:e2e": "vite",
    "lint": "eslint . --ext .js,.ts",
    "build": "rollup -c",
    "clear": "rimraf lib",
    "prebuild": "yarn clear && tsc -p tsconfig.declaration.json",
    "release": "release-it",
    "prepare": "husky install"
  },
  "peerDependencies": {
    "react": "^16.8.0 || ^17.0.0 || ^18.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "17.7.1",
    "@commitlint/config-conventional": "17.7.0",
    "@playwright/test": "1.37.1",
    "@release-it/conventional-changelog": "7.0.0",
    "@rollup/plugin-commonjs": "24.0.1",
    "@rollup/plugin-sucrase": "5.0.1",
    "@testing-library/react": "14.0.0",
    "@types/jest": "29.5.4",
    "@types/react": "18.0.28",
    "@types/react-dom": "18.0.11",
    "@typescript-eslint/eslint-plugin": "5.62.0",
    "@typescript-eslint/parser": "5.62.0",
    "@vitejs/plugin-react": "4.0.4",
    "conventional-changelog-angular": "6.0.0",
    "eslint": "8.48.0",
    "eslint-config-prettier": "8.6.0",
    "eslint-config-standard": "17.1.0",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-n": "16.0.1",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-promise": "6.1.1",
    "eslint-plugin-react": "7.32.2",
    "eslint-plugin-react-hooks": "4.6.0",
    "fast-check": "3.12.0",
    "husky": "8.0.3",
    "jest": "29.6.3",
    "jest-environment-jsdom": "29.6.3",
    "prettier": "2.8.4",
    "pretty-quick": "3.1.3",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "release-it": "16.1.5",
    "rimraf": "5.0.1",
    "rollup": "2.79.1",
    "rollup-plugin-terser": "7.0.2",
    "ts-jest": "29.1.1",
    "ts-node": "10.9.1",
    "typescript": "4.9.5",
    "vite": "4.4.9",
    "vite-plugin-commonjs": "0.8.2"
  },
  "files": [
    "lib/"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "packageManager": "yarn@3.6.2",
  "release-it": {
    "git": {
      "commitMessage": "chore(release): v${version}",
      "push": true,
      "commit": true,
      "tag": true,
      "requireCommits": false,
      "requireCleanWorkingDir": false
    },
    "github": {
      "release": true,
      "draft": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular",
        "infile": "CHANGELOG.md",
        "header": "# Changelog"
      }
    },
    "hooks": {
      "after:release": "echo Successfully released ${name} v${version} to ${repo.repository}."
    }
  }
}
